{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<div class="card">
					<div class="card-header">
						<h1 class="h3 mb-0">Connexion</h1>
					</div>
					<div class="card-body">
						<form method="post">
							{% if error %}
								<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
							{% endif %}

							<div class="mb-3">
								<label for="login" class="form-label">Login</label>
								<input type="text" value="{{ last_username }}" name="login" id="login" class="form-control" autocomplete="username" required autofocus>
							</div>

							<div class="mb-3">
								<label for="password" class="form-label">Mot de passe</label>
								<input type="password" name="password" id="password" class="form-control" autocomplete="current-password" required>
								<div class="mt-1 text-end">
									<a href="{{ path('app_forgot_password_request') }}" class="text-decoration-none">Mot de passe oubli√© ?</a>
								</div>
							</div>

							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

							<div class="d-grid gap-2">
								<button class="btn btn-primary" type="submit">Se connecter</button>
							</div>
						</form>
					</div>
					<div class="card-footer text-center">
						<p class="mb-0">Pas encore de compte ?
							<a href="{{ path('app_register') }}">S'inscrire</a>
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
