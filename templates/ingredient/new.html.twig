{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Nouvel ingr√©dient</h2>
        </div>
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
            
            <div class="row g-3">
                <div class="col-md-6">
                    {{ form_row(form.nom, {
                        'attr': {
                            'class': 'form-control form-control-lg'
                        }
                    }) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.unite) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.quantiteDefaut) }}
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Enregistrer
                </button>
            </div>
            
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
