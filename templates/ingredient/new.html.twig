{% block body %}
    <div class="container-fluid p-3">
        <h4 class="mb-3">Nouvel ingr√©dient</h4>
        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_row(form.nom, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Ex: Farine, Sucre, Lait...'
                    }
                }) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.unite, {
                    'attr': {'class': 'form-select'}
