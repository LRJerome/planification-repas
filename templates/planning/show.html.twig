{% extends 'base.html.twig' %}

{% block title %}Détails du planning{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center mb-4">Détails du planning</h1>
    
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Date</th>
                <td>{{ planning.date|date('d/m/Y') }}</td>
            </tr>
            <tr>
                <th>Nombre de personnes</th>
                <td>{{ planning.nombrePersonnes }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-center gap-3 mt-4">
        <a href="{{ path('planning_edit', {'id': planning.id}) }}" class="btn btn-warning">
            <i class="fa-solid fa-pencil-alt"></i> Modifier
        </a>
        <a href="{{ path('planning_index') }}" class="btn btn-secondary">
            <i class="fa-solid fa-list"></i> Retour à la liste
        </a>
    </div>

    {{ include('planning/_delete_form.html.twig') }}
</div>
{% endblock %}
