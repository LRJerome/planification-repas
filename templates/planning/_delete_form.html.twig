{# templates/planning/_delete_form.html.twig #}
<form method="post" action="{{ path('app_planning_delete', {'id': planning.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce planning ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ planning.id) }}">
    <button class="btn btn-sm btn-outline-danger w-100">
        <i class="fas fa-trash me-1"></i>Supprimer
    </button>
</form>