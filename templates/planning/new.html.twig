{% extends 'base.html.twig' %}

{% block title %}Nouveau Planning
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1 class="text-center mb-4">Enregistrer vos recettes ici</h1>


		{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

		<div class="col-sm-8">
			<div class="mb-3 row">
				<div class="col-sm-3">
					<label for="{{ form.date.vars.id }}" class="col-form-label col-sm-2">Date</label>
				</div>
				<div class="col-sm-3">
					{{ form_widget(form.date, {'attr': {'class': 'form-control', 'value': "now"|date('Y-m-d')}}) }}
				</div>
			</div>
		</div>

		<div class="mb-3 row">
			<div class="col">
				{{ form_row(form.petitDejeuner, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="col-auto">
				{{ form_row(form.nombrePersonnesPetitDejeuner, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>

		<div class="mb-3 row">
			<div class="col">
				{{ form_row(form.encasMatin, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="col-auto">
				{{ form_row(form.nombrePersonnesEncasMatin, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>

		<div class="mb-3 row">
			<div class="col">
				{{ form_row(form.dejeuner, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="col-auto">
				{{ form_row(form.nombrePersonnesDejeuner, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>

		<div class="mb-3 row">
			<div class="col">
				{{ form_row(form.encasApresMidi, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="col-auto">
				{{ form_row(form.nombrePersonnesEncasApresMidi, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>

		<div class="mb-3 row">
			<div class="col">
				{{ form_row(form.diner, {'attr': {'class': 'form-control'}}) }}
			</div>
			<div class="col-auto">
				{{ form_row(form.nombrePersonnesDiner, {'attr': {'class': 'form-control'}}) }}
			</div>
		</div>

		<button type="submit" class="btn btn-primary">Créer</button>
		{{ form_end(form) }}

		<div class="mt-3">
			<a href="{{ path('planning_index') }}" class="btn btn-secondary">Retour à la liste</a>
		</div>
	</div>
{% endblock %}
