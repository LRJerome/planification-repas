{% extends 'base.html.twig' %}

{% block title %}Nouveau Planning{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h1 class="h3 mb-0">
                            <i class="fas fa-calendar-plus me-2"></i>
                            Créer un nouveau planning
                        </h1>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'data-add-to-planning': 'true', 'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.date, 'Date', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.date, {
                                        'attr': {
                                            'class': 'form-control',
                                            'min': "now"|date('Y-m-d')
                                        }
                                    }) }}
                                    {{ form_errors(form.date) }}
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.petitDejeuner, 'Petit Déjeuner', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.petitDejeuner, {'attr': {'class': 'form-select'}}) }}
                                    {{ form_errors(form.petitDejeuner) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.nombrePersonnesPetitDejeuner, 'Nombre de personnes', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.nombrePersonnesPetitDejeuner, {'attr': {'class': 'form-control', 'min': '1'}}) }}
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.encasMatin, 'En-cas Matin', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.encasMatin, {'attr': {'class': 'form-select'}}) }}
                                    {{ form_errors(form.encasMatin) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.nombrePersonnesEncasMatin, 'Nombre de personnes', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.nombrePersonnesEncasMatin, {'attr': {'class': 'form-control', 'min': '1'}}) }}
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.dejeuner, 'Déjeuner', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.dejeuner, {'attr': {'class': 'form-select'}}) }}
                                    {{ form_errors(form.dejeuner) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.nombrePersonnesDejeuner, 'Nombre de personnes', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.nombrePersonnesDejeuner, {'attr': {'class': 'form-control', 'min': '1'}}) }}
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.encasApresMidi, 'En-cas Après-midi', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.encasApresMidi, {'attr': {'class': 'form-select'}}) }}
                                    {{ form_errors(form.encasApresMidi) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.nombrePersonnesEncasApresMidi, 'Nombre de personnes', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.nombrePersonnesEncasApresMidi, {'attr': {'class': 'form-control', 'min': '1'}}) }}
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.diner, 'Dîner', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.diner, {'attr': {'class': 'form-select'}}) }}
                                    {{ form_errors(form.diner) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.nombrePersonnesDiner, 'Nombre de personnes', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.nombrePersonnesDiner, {'attr': {'class': 'form-control', 'min': '1'}}) }}
                                </div>
                            </div>

                            <div class="d-flex justify-content-between mt-4">
                                <a href="{{ path('planning_index') }}" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Retour
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>Enregistrer
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .card {
            border: none;
            border-radius: 15px;
        }
        .card-header {
            border-radius: 15px 15px 0 0 !important;
            padding: 1.5rem;
        }
        .form-label {
            font-weight: 500;
        }
        .form-control, .form-select {
            border-radius: 8px;
        }
        .btn {
            border-radius: 8px;
            padding: 0.5rem 1.5rem;
        }
    </style>
{% endblock %}
